<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="165dp"
    android:layout_height="260dp"

    android:layout_marginBottom="5dp"
    android:layout_marginTop="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="40dp"

    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card123"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:clickable="true"

        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="255dp"

            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cvimg1"
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:background="@color/Black"
                android:scaleType="centerCrop"></androidx.appcompat.widget.AppCompatImageView>

            <TextView
                android:id="@+id/cvt1"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/Green"
                android:gravity="center"
                android:text="Auction Title"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="@font/abril_fatface"></TextView>

            <TextView
                android:id="@+id/cvt2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="Auction Price"
                android:textColor="@color/Black"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>