        android:inputType="textEmailAddress"

        android:background="@drawable/textbox"/>

      <EditText
        android:id="@+id/passs"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
