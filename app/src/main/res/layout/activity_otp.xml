<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Otp.OtpActivity"
    android:background="@color/Black">


    <TextView
        android:id="@+id/otptext1"
        android:layout_width="257dp"
        android:layout_height="94dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="78dp"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="62dp"

        android:gravity="center|left"
        android:text="Enter OTP"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:fontFamily="@font/allura" />

    <Button
        android:id="@+id/otpbtn"
        android:layout_width="250dp"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="270dp"
        android:backgroundTint="@color/Green"

        android:drawableRight="@drawable/arrowblack"
        android:text="Submit" />

    <EditText
        android:id="@+id/otpedt1"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="225dp"
        android:backgroundTint="@color/white"
        android:ems="12"
        android:hint="******"
        android:inputType="textPassword"
        android:textColorHint="@color/Gray" />

    <TextView
        android:id="@+id/otplink1"
        android:layout_width="120dp"
        android:layout_height="66dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"

        android:layout_centerInParent="true"
        android:layout_marginEnd="208dp"
        android:layout_marginRight="208dp"
        android:layout_marginBottom="173dp"
        android:clickable="true"
        android:drawableLeft="@drawable/arrowbackwhite"
        android:drawableTint="@color/colorPrimaryDark"
        android:gravity="center|right"
        android:text="Back"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />
</RelativeLayout>