<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.auctionhub">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/colorfff"
        android:label="@string/app_name"
        android:roundIcon="@drawable/colorfff"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"

        android:usesCleartextTraffic="true"
        tools:targetApi="m">
<activity android:name=".MainActivity"/>
        <activity android:name=".AddProduct.AddproActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".BottomActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".Registration.RegistrationActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".Splash.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>